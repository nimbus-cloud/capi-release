set -e

export GOPATH=$PWD
mkdir $GOPATH/src
mv $GOPATH/* $GOPATH/src || true

export GOROOT=$(readlink -nf /var/vcap/packages/golang1.7)
export PATH=$GOROOT/bin:$PATH
go install code.cloudfoundry.org/nsync/cmd/nsync-listener
go install code.cloudfoundry.org/nsync/cmd/nsync-bulker

cp -a $PWD/bin $BOSH_INSTALL_TARGET
